@model BuildFormation.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}
<div>
    <b>@Html.ActionLink(@Model.NbMembre.ToString()+ " membres", "Index", "Membre")</b> 
</div>
@*<a href="~/Documents/DocTest.pdf">teste lien</a>*@
<div class="AcceilGauche" >
    <h1>Liste des derniers @Model.Limit topics  </h1>
    @foreach (var topic in Model.ListeDerniersTopics)
    {
    <biv>
        <h2>@Html.ActionLink(@topic.Titre, "AfficherTopic", "Topic", new { id = topic.Id }, null)</h2>
        <b> Auteur : </b> @topic.Auteur.Nom
        <b> Le : </b> @topic.DateDePublication
        <b> theme : </b> @topic.Theme
        <br />
        <b>Description :</b>
        <br />
        @topic.Description

    </biv>
    }
</div>


<div class="AcceilDroite">
    <h1>Liste des @Model.Limit dérniers documents </h1>
    @foreach (var document in Model.ListeDerniersDocuments)
    {
    <biv>
        <h2>@Html.ActionLink(@document.Titre, "AfficherDocument", "Document", new { id = document.Id }, null)</h2>
        <b> Auteur : </b> @document.Auteur.Nom
        <b> Le : </b> @document.DateDePublication
        <b> Theme : </b> @document.Theme
        <b> Nombre de pages : </b> @document.NbPages
        <br />
        <b>Description :</b>
        <br />
        @document.Description
    </biv>
    }
</div>

