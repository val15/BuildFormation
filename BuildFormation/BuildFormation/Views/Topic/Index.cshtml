
@model BuildFormation.ViewModels.RechercheTopicViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Liste des topics  </h1>


@using (Ajax.BeginForm("ResultatsRechercheTopics", new AjaxOptions
{
    HttpMethod = "GET",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "resultats",
    OnFailure = "ErreurRecherche",
    LoadingElementId = "chargement"
}))

{
    @Html.TextBoxFor(m => m.Filtre);
    <img id="chargement" src="~/Content/Images/ajax-loader.gif" style="display: none" alt="Chargement en cours..." />
    <input type="submit" value="Rechercher" />
   

    <div id="resultats">
        @{Html.RenderAction("ResultatsRechercheTopics", new { rechercheViewModel = Model });
        }
    </div>
}

